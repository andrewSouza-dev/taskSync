<%- include('../partials/header') %>

<h1>Minhas Tarefas</h1>
<a href="/my-tasks/new" class="btn-primary">➕ Nova Tarefa</a>

<table class="table">
  <thead>
    <tr>
      <th>ID</th>
      <th>Título</th>
      <th>Status</th>
      <th>Ações</th>
    </tr>
  </thead>
  <tbody>
    <% if (tasks.length > 0) { %>
      <% tasks.forEach(t => { %>
        <tr>
          <td><%= t.id %></td>
          <td><%= t.title %></td>
          <td><%= t.status %></td>
          <td>
            <a href="/my-tasks/<%= t.taskId %>/edit">Editar</a>
            <form action="/my-tasks/<%= t.taskId %>?_method=DELETE" method="POST" style="display:inline;">
              <button class="btn-delete">Deletar</button>
            </form>
          </td>
        </tr>
      <% }) %>
    <% } else { %>
      <tr><td colspan="4">Nenhuma tarefa encontrada</td></tr>
    <% } %>
  </tbody>
</table>

<%- include('../partials/footer') %>
