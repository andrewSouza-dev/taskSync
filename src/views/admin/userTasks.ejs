<%- include('../partials/header') %>

<h1>Tarefas do Usuário <%= userId %></h1>
<a href="/admin/users/<%= userId %>/tasks/new" class="btn-primary">➕ Adicionar Tarefa</a>

<table class="table">
  <thead>
    <tr>
      <th>Task ID</th>
      <th>Título</th>
      <th>Status</th>
      <th>Role</th>
      <th>Ações</th>
    </tr>
  </thead>
  <tbody>
    <% tasks.forEach(t => { %>
      <tr>
        <td><%= t.taskId %></td>
        <td><%= t.title %></td>
        <td><%= t.status %></td>
        <td><%= t.role %></td>
        <td>
          <a href="/admin/users/<%= userId %>/tasks/<%= t.taskId %>">Ver</a> |
          <a href="/admin/users/<%= userId %>/tasks/<%= t.taskId %>/edit">Editar</a> |
          <form action="/admin/users/<%= userId %>/tasks/<%= t.taskId %>?_method=DELETE" method="POST" style="display:inline;">
            <button class="btn-delete">Deletar</button>
          </form>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>

<%- include('../partials/footer') %>
