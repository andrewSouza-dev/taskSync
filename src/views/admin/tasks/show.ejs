<%- include('../../partials/menu', { user }) %>

<div class="form-wrapper">
  <h2>Detalhes da Tarefa</h2>

  <p><strong>ID:</strong> <%= task.id %></p>
  <p><strong>Título:</strong> <%= task.title %></p>
  <p><strong>Descrição:</strong> <%= task.description %></p>
  <p><strong>Status:</strong> <%= task.status %></p>

  <div style="margin-top: 1.5rem;">
    <a href="/tasks/<%= task.id %>/edit" class="btn-action">✏️ Editar</a>

    <form action="/tasks/<%= task.id %>?_method=DELETE" method="POST" style="display:inline;">
      <button type="submit" class="btn-danger">🗑️ Excluir</button>
    </form>

    <a href="/tasks" class="btn-back">⬅ Voltar</a>
  </div>
</div>

