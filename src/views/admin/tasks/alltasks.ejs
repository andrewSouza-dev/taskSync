<%- include('../../partials/menu', { user }) %>

<h1>🛠️ Tarefas (Admin)</h1>
<a href="/tasks/new" class="btn-primary btn-small-width">➕ Nova Tarefa</a>

<table class="table">
  <thead>
    <tr>
      <th>ID</th>
      <th>Nome</th>
      <th>Status</th>
      <th>Ações</th>
    </tr>
  </thead>
  <tbody>
    <% if (tasks.length > 0) { %>
      <% tasks.forEach(task => { %>
        <tr>
          <td><%= task.id %></td>
          <td><%= task.title %></td>
          <td>
            <% if (task.status === 'PENDING') { %>
              <span class="badge bg-secondary">Pendente</span>
            <% } else if (task.status === 'RUNNING') { %>
              <span class="badge bg-info">Em andamento</span>
            <% } else if (task.status === 'COMPLETED') { %>
              <span class="badge bg-success">Concluída</span>
            <% } else { %>
              <span class="badge bg-danger">Falhou</span>
            <% } %>
          </td>
          <td>
            <a href="/users/<%= user.id %>" class="btn-view">👁 Ver</a> |
            <a href="/tasks/<%= task.id %>/edit" class="btn-sm btn-warning">✏️ Editar</a> |
            <form action="/tasks/<%= task.id %>?_method=DELETE" method="POST" style="display:inline;">
              <button class="btn-delete">🗑️ Deletar</button>
            </form>
          </td>
        </tr>
      <% }) %>
    <% } else { %>
      <tr><td colspan="4">Nenhuma tarefa encontrada</td></tr>
    <% } %>
  </tbody>
</table>

<%- include('../../partials/footer') %>

